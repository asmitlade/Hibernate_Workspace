<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <hibernate-mapping>
        	<!-- class cfgs -->
        	<class name="com.mac.entity.StockInfo" table="STOCKINFO">
        		<id name="stockId" column="STOCKID">
        			<generator class="increment"/>
        		</id>
        		<timestamp name="lastUpdated" column="LASTUPDATED"/>
        		<property name="stockName" column="STOCKNAME"/>
        		<property name="company" column="COMPANY"/>
        		<property name="price" column="PRICE" precision="2"/>
        	</class>
        </hibernate-mapping>